{
  "name": "phonepe_expense_pipeline",
  "description": "Bronze → Silver → Gold batch pipeline for PhonePe expenses\n",
  "email_notifications": {
    "on_failure": [
      "hariramanadham148@gmail.com"
    ],
    "no_alert_for_skipped_runs": false
  },
  "webhook_notifications": {},
  "notification_settings": {
    "no_alert_for_skipped_runs": false,
    "no_alert_for_canceled_runs": false
  },
  "timeout_seconds": 0,
  "trigger": {
    "pause_status": "UNPAUSED",
    "file_arrival": {
      "url": "/Volumes/ppe/ppe/ppe_input/"
    }
  },
  "max_concurrent_runs": 1,
  "tasks": [
    {
      "task_key": "bronze_ingestion",
      "run_if": "ALL_SUCCESS",
      "notebook_task": {
        "notebook_path": "/Workspace/Users/hariramanadham148@gmail.com/PhonePay Expenses/01_bronze_ingestion",
        "source": "WORKSPACE"
      },
      "timeout_seconds": 0,
      "email_notifications": {
        "on_failure": [
          "hariramanadham148@gmail.com"
        ]
      },
      "notification_settings": {
        "no_alert_for_skipped_runs": false,
        "no_alert_for_canceled_runs": false,
        "alert_on_last_attempt": false
      },
      "webhook_notifications": {}
    },
    {
      "task_key": "Archive_Source_Files",
      "depends_on": [
        {
          "task_key": "bronze_ingestion"
        }
      ],
      "run_if": "ALL_SUCCESS",
      "notebook_task": {
        "notebook_path": "/Workspace/Users/hariramanadham148@gmail.com/PhonePay Expenses/01b_Archive_Source_Files",
        "source": "WORKSPACE"
      },
      "timeout_seconds": 0,
      "email_notifications": {},
      "webhook_notifications": {}
    },
    {
      "task_key": "silver_processing",
      "depends_on": [
        {
          "task_key": "Archive_Source_Files"
        }
      ],
      "run_if": "ALL_SUCCESS",
      "notebook_task": {
        "notebook_path": "/Workspace/Users/hariramanadham148@gmail.com/PhonePay Expenses/02_Silver_Layer",
        "source": "WORKSPACE"
      },
      "timeout_seconds": 0,
      "email_notifications": {
        "on_failure": [
          "hariramanadham148@gmail.com"
        ]
      },
      "notification_settings": {
        "no_alert_for_skipped_runs": false,
        "no_alert_for_canceled_runs": false,
        "alert_on_last_attempt": false
      },
      "webhook_notifications": {}
    },
    {
      "task_key": "gold_aggregation",
      "depends_on": [
        {
          "task_key": "silver_processing"
        }
      ],
      "run_if": "ALL_SUCCESS",
      "notebook_task": {
        "notebook_path": "/Workspace/Users/hariramanadham148@gmail.com/PhonePay Expenses/03_Gold_Expense Tracker",
        "source": "WORKSPACE"
      },
      "timeout_seconds": 0,
      "email_notifications": {
        "on_failure": [
          "hariramanadham148@gmail.com"
        ]
      },
      "notification_settings": {
        "no_alert_for_skipped_runs": false,
        "no_alert_for_canceled_runs": false,
        "alert_on_last_attempt": false
      },
      "webhook_notifications": {}
    }
  ],
  "queue": {
    "enabled": true
  },
  "environments": [
    {
      "environment_key": "Default",
      "spec": {
        "environment_version": "4"
      }
    }
  ],
  "performance_target": "PERFORMANCE_OPTIMIZED"
}